# Ultra Discord Bot Configuration Template
# Copy this file to .env and fill with your real tokens (do NOT commit .env)

# ===========================================
# REQUIRED DISCORD CONFIGURATION
# ===========================================
DISCORD_TOKEN=your-discord-bot-token-here
CLIENT_ID=your-application-client-id
GUILD_ID=your-test-guild-id

# ===========================================
# DATABASE CONFIGURATION (SQLite)
# ===========================================
DATABASE_URL=./data/bot.db
DB_MAX_CONNECTIONS=10
DB_BACKUP_INTERVAL=24
DB_BACKUP_RETENTION=7

# ===========================================
# OPTIONAL AI INTEGRATION
# ===========================================
OPENAI_API_KEY=your-openai-key-here
LOCAL_MODEL_URL=http://host.docker.internal:9000
LOCAL_MODEL_API=openwebui
AI_DEFAULT_MODEL=gpt-4
AI_MAX_TOKENS=2048

# ===========================================
# MUSIC API CREDENTIALS
# ===========================================
# Spotify API credentials (Primary music source)
SPOTIFY_CLIENT_ID=your-spotify-client-id-here
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret-here

# YouTube API credentials (Fallback and search)
YOUTUBE_API_KEY=your-youtube-api-key-here

# Deezer API credentials (Legacy fallback)
DEEZER_APP_ID=your-deezer-app-id-here
DEEZER_APP_SECRET=your-deezer-app-secret-here

# ===========================================
# EXTERNAL API KEYS
# ===========================================
OPENWEATHER_API_KEY=your-openweather-api-key-here
NEWS_API_KEY=your-news-api-key-here

# ===========================================
# BOT CONFIGURATION
# ===========================================
BOT_PREFIX=!
BOT_ACTIVITY=Playing RPG Adventures
BOT_STATUS=online
LOG_LEVEL=info
ERROR_WEBHOOK_URL=your-error-webhook-url-here

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_STANDARD_MAX=5
RATE_LIMIT_PREMIUM_MAX=20

# ===========================================
# ECONOMY CONFIGURATION
# ===========================================
ECONOMY_DAILY_REWARD=100
ECONOMY_STARTING_BALANCE=500
ECONOMY_MAX_BALANCE=1000000000
ECONOMY_TAX_RATE=0.05

# ===========================================
# RPG CONFIGURATION
# ===========================================
RPG_MAX_LEVEL=100
RPG_XP_MULTIPLIER=1.5
RPG_DAILY_RESET_HOUR=0
RPG_SESSION_RESET_MINUTES=30

# ===========================================
# MODERATION CONFIGURATION
# ===========================================
MODERATION_MAX_WARNINGS=3
MODERATION_AUTO_BAN_THRESHOLD=5
MODERATION_MUTE_DURATION_MINUTES=60
MODERATION_LOG_CHANNEL_ID=your-log-channel-id-here

# ===========================================
# MUSIC CONFIGURATION
# ===========================================
MUSIC_MAX_QUEUE_SIZE=100
MUSIC_DEFAULT_VOLUME=50
MUSIC_MAX_VOLUME=100
MUSIC_LEAVE_TIMEOUT_MINUTES=5
MUSIC_SEARCH_TIMEOUT_SECONDS=30

# ===========================================
# AI CONFIGURATION
# ===========================================
AI_CONVERSATION_MEMORY_SIZE=10
AI_RESPONSE_TIMEOUT_SECONDS=30
AI_MAX_CONVERSATION_LENGTH=50
AI_PERSONALITIES=creative,technical,helpful,funny

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
NODE_ENV=production
DEBUG=false
ENABLE_SWAGGER_DOCS=false
ENABLE_METRICS=false

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
DOCKER_PORT=3000
DOCKER_HOST=0.0.0.0
DOCKER_DATABASE_PATH=/app/data/bot.db

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_REMOTE_URL=your-backup-remote-url-here
