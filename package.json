{
  "name": "pulsebot",
  "version": "3.0.0",
  "description": "Pulse Bot - The Most Advanced Discord Bot Ever Created",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "start:prod": "NODE_ENV=production node src/index.js",
    "dev": "node --watch src/index.js",
    "dev:debug": "node --inspect --watch src/index.js",
    "deploy": "node src/deploy-commands.js",
    "deploy:prod": "NODE_ENV=production node src/deploy-commands.js",
    "test": "node tests/comprehensive-tests.js",
    "test:rpg": "node tests/rpg.test.js",
    "test:unit": "node tests/test-token.js",
    "test:integration": "node tests/test-button-interactions.js",
    "test:imports": "node scripts/test-imports.mjs",
    "test:coverage": "npm run test && npx c8 --reporter=lcov --reporter=text node tests/comprehensive-tests.js",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "lint:batch": "node scripts/fix-eslint-batch.js",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "build": "npm run lint && npm run format:check && npm test",
    "install-deps": "npm install @discordjs/voice @discordjs/opus ytdl-core ffmpeg-static",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "db:migrate": "node scripts/migrate-db.js",
    "db:backup": "node scripts/backup-db.js",
    "db:reset": "node scripts/reset-db.js",
    "logs:clean": "rm -rf logs/*.log",
    "docker:build": "docker build -t pulsebot .",
    "docker:run": "docker run -d --name pulse-bot --env-file .env pulsebot"
  },
  "engines": {
    "node": ">=18.0.0 <24.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "discord",
    "bot",
    "rpg",
    "gaming",
    "music",
    "ai",
    "moderation",
    "economy",
    "social",
    "entertainment",
    "sqlite",
    "typescript-support"
  ],
  "author": "Pulse Bot Development Team",
  "license": "MIT",
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.16.1",
    "@distube/ytdl-core": "^4.16.12",
    "axios": "^1.6.0",
    "better-sqlite3": "^11.8.0",
    "discord.js": "^14.16.0",
    "dotenv": "^16.3.1",
    "ffmpeg-static": "^5.2.0",
    "libsodium-wrappers": "^0.7.15",
    "node-cron": "^3.0.3",
    "rate-limiter-flexible": "^3.0.4",
    "sodium": "^3.0.2",
    "spotify-web-api-node": "^5.0.2",
    "tweetnacl": "^1.0.3",
    "ws": "^8.14.0",
    "yt-search": "^2.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "c8": "^8.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-complexity": "^1.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "^48.0.0",
    "glob": "^11.0.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/watchandnotlearn/ultra-discord-bot.git"
  },
  "bugs": {
    "url": "https://github.com/watchandnotlearn/ultra-discord-bot/issues"
  },
  "homepage": "https://github.com/watchandnotlearn/ultra-discord-bot#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
